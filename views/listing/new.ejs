<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>New Listing</h1>
                <form action="/listings" method="post" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listx[title]" id="title" placeholder="Enter title" class="form-control"
                            required>
                        <div class="invalid-feedback">Title must have for listing</div>
                        <div class="valid-feedback">Title looks good/div>
                        </div>
                        <div class="mb-3">
                            <label for="desc" class="form-label">Description</label>
                            <textarea name="listx[desc]" id="desc" placeholder="Enter description" class="form-control"
                                required></textarea>
                            <div class="invalid-feedback">Description must have for listing</div>
                            <div class="valid-feedback">Description looks good</div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" name="listx[location]" id="location" placeholder="Enter location"
                                    class="form-control" required>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="price" class="form-label">Price</label>
                                <input type="text" name="listx[price]" id="price" placeholder="Enter price"
                                    class="form-control" required>
                                <div class="invalid-feedback">Enter a Valid Price</div>
                                <div class="valid-feedback">Price looks good</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="img" class="form-label">Upload Image</label>
                                <input type="file" name="listx[img]" id="img" class="form-control" required>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="category" class="form-label">Category</label>
                                <select name="listx[category]" id="category" class="form-select" required>
                                    <option value="" selected disabled>Select a category</option>
                                    <option value="Trending">Trending</option>
                                    <option value="Rooms">Rooms</option>
                                    <option value="Iconic Cities">Iconic Cities</option>
                                    <option value="Mountains">Mountains</option>
                                    <option value="Amazing Pools">Amazing Pools</option>
                                    <option value="Camping">Camping</option>
                                    <option value="Farms">Farms</option>
                                    <option value="Arctic">Arctic</option>
                                    <option value="Domes">Domes</option>
                                    <option value="Boats">Boats</option>
                                </select>
                                <div class="invalid-feedback">Please select a valid category.</div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </body>