<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <main class="container py-4">
            <div class="row">
                <div class="col-12 col-md-8 offset-md-2">
                    <h1 class="mb-4">Edit Listing</h1>

                    <form action="/listings/<%= listx._id %>?_method=put" method="post" novalidate
                        class="needs-validation" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="listx_title" class="form-label">Title</label>
                            <input id="listx_title" name="listx[title]" type="text" class="form-control"
                                placeholder="Enter title" value="<%= listx.title %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="listx_desc" class="form-label">Description</label>
                            <textarea id="listx_desc" name="listx[desc]" class="form-control" rows="5"
                                placeholder="Enter description" required><%= listx.desc %></textarea>
                        </div>

                        <div class="mb-3">
                            Current Listing Image: <br>
                            <img src="<%= listx.img.url %>" alt="listing_image"
                                style="height: 200px; width: 300px; object-fit: cover;" class="img-thumbnail">
                        </div>
                        <div class="mb-3">
                            <label for="listx_img" class="form-label">Upload New Image</label>
                            <input id="listx_img" name="listx[img]" type="file" class="form-control"
                                value="<%= listx.img.url %>">
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-12 col-sm-6">
                                <label for="listx_price" class="form-label">Price</label>
                                <input id="listx_price" name="listx[price]" type="number" class="form-control"
                                    placeholder="Enter price" value="<%= listx.price %>" required>
                            </div>

                            <div class="col-12 col-sm-6">
                                <label for="listx_location" class="form-label">Location</label>
                                <input id="listx_location" name="listx[location]" type="text" class="form-control"
                                    placeholder="Enter location" value="<%= listx.location %>">
                            </div>
                            <div class="mb-3">
                                <label for="category" class="form-label">Category</label>
                                <select name="listx[category]" id="category" class="form-select" required>
                                    <% const categories=["Trending", "Rooms" , "Iconic Cities" , "Mountains"
                                        , "Amazing Pools" , "Camping" , "Farms" , "Arctic" , "Domes" , "Boats" ]; %>

                                        <% for(let cat of categories) { %>
                                            <option value="<%= cat %>" <%=listx.category===cat ? 'selected' : '' %>>
                                                <%= cat %>
                                            </option>
                                            <% } %>
                                </select>
                                <div class="invalid-feedback">Please select a valid category.</div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/listings" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update Listing</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </body>